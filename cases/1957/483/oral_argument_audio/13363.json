                                    "date_start": -416862000,
                                    "date_end": 648450000,
                                    "appointing_president": "Dwight D. Eisenhower",
                                    "role_title": "Associate Justice of the Supreme Court of the United States",
                                    "institution_name": "Supreme Court of the United States",
                                    "href": "https:\/\/api.oyez.org\/preson_role\/scotus_justice\/2786"
                                }
                            ],
                            "thumbnail": {
                                "id": 32778,
                                "mime": "image\/png",
                                "size": 56873,
                                "href": "https:\/\/api.oyez.org\/sites\/default\/files\/william_j_brennan.png"
                            },
                            "length_of_service": 12330,
                            "identifier": "william_j_brennan_jr"
                        },
                        "text_blocks": [
                            {
                                "start": 246.623,
                                "stop": 252.013,
                                "byte_start": 1015265,
                                "byte_stop": 1036790,
                                "text": "How long has it been (Inaudible)"
                            }
                        ]
                    },
                    {
                        "start": 252.013,
                        "stop": 277.811,
                        "byte_start": 1036790,
                        "byte_stop": 1139816,
                        "speaker": {
                            "ID": 16091,
                            "name": "Mr. Attorney General",
                            "href": "https:\/\/api.oyez.org\/people\/attorney_general",
                            "last_name": "General",
                            "roles": null,
                            "thumbnail": null,
                            "length_of_service": 0,
                            "identifier": "attorney_general"
                        },
                        "text_blocks": [
                            {
                                "start": 252.013,
                                "stop": 261.74,
                                "byte_start": 1036790,
                                "byte_stop": 1075660,
                                "text": "I believe -- it -- it covers specifically all words that have existed since the California was in existence."
                            },
                            {
                                "start": 261.74,
                                "stop": 277.811,
                                "byte_start": 1075660,
                                "byte_stop": 1139816,
                                "text": "Now, I\u0027m not sure when it first came into existence, but it states veterans of these wars and it -- it goes on down and numbered them and then it\u0027s amended usually to include new words as -- as the situation arises."
                            }
                        ]
                    }
                ]
