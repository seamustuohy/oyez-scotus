                        "text_blocks": [
                            {
                                "start": 179.189,
                                "stop": 185.018,
                                "byte_start": 745472,
                                "byte_stop": 768773,
                                "text": "The Supreme Court, the State Supreme Court indicated that it was left out for administrative difficulties."
                            }
                        ]
                    },
                    {
                        "start": 185.018,
                        "stop": 185.735,
                        "byte_start": 768773,
                        "byte_stop": 771699,
                        "speaker": {
                            "ID": 15050,
